{
  "publisher": "hadronomy",
  "name": "ram",
  "displayName": "ram",
  "version": "0.1.0-alpha.4",
  "private": true,
  "packageManager": "pnpm@10.10.0",
  "description": "",
  "funding": "https://github.com/sponsors/hadronomy",
  "homepage": "https://github.com/hadronomy/ram#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/hadronomy/ram"
  },
  "bugs": {
    "url": "https://github.com/hadronomy/ram/issues"
  },
  "sponsor": {
    "url": "https://github.com/sponsors/hadronomy"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/index.js",
  "icon": "res/icon.png",
  "files": [
    "LICENSE.md",
    "dist/*",
    "res/*",
    "syntax/*"
  ],
  "engines": {
    "vscode": "^1.99.1"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "RAM",
      "properties": {
        "ram.server.host": {
          "type": "string",
          "default": "localhost",
          "description": "The host for the RAM language server"
        },
        "ram.server.port": {
          "type": "number",
          "default": 9257,
          "description": "The port for the RAM language server"
        },
        "ram.decorations.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable custom decorations for RAM language operators"
        }
      }
    },
    "languages": [
      {
        "id": "ram",
        "aliases": [
          "RAM",
          "ram"
        ],
        "extensions": [
          ".ram"
        ],
        "icon": {
          "light": "./res/icon.svg",
          "dark": "./res/icon.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "ram",
        "scopeName": "source.ram",
        "path": "./syntax/ram.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "ram.lspStatus",
        "title": "RAM: Show Status"
      },
      {
        "command": "ram.restartServer",
        "title": "RAM: Restart Server"
      },
      {
        "command": "ram.toggleDecorations",
        "title": "RAM: Toggle Operator Decorations"
      }
    ],
    "markdown.previewStyles": [
      "./res/decorations.css"
    ]
  },
  "scripts": {
    "build": "tsdown -c tsdown.config.ts",
    "dev": "nr build --sourcemap",
    "prepare": "nr update",
    "update": "vscode-ext-gen --output src/generated/meta.ts",
    "lint": "eslint .",
    "vscode:prepublish": "nr build",
    "publish": "vsce publish --no-dependencies --no-git-checks",
    "pack": "vsce package --no-dependencies",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "release": "bumpp && nr publish"
  },
  "dependencies": {
    "reactive-vscode": "^0.2.14",
    "vscode-ext-gen": "^1.0.2",
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@antfu/ni": "^24.3.0",
    "@hadronomy/eslint-config": "^4.1.2",
    "@types/node": "^22.15.3",
    "@types/vscode": "^1.99.1",
    "@types/ws": "^8.18.1",
    "@vscode/vsce": "^3.3.2",
    "bumpp": "^10.1.0",
    "eslint": "^9.25.1",
    "esno": "^4.8.0",
    "pnpm": "^10.10.0",
    "tsdown": "^0.10.2",
    "typescript": "^5.8.3",
    "vite": "^6.3.4",
    "vitest": "^3.1.2"
  }
}
