{
  "name": "@ramlang/cli",
  "version": "0.1.0-alpha.7",
  "description": "Language tools for the `ram` language",
  "author": "Pablo Hern√°ndez <hadronomy@gmail.com> (https://hadronomy.com)",
  "homepage": "https://ram.hadronomy.com",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hadronomy/ram.git",
    "directory": "packages/ram"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "language"
  ],
  "license": "MIT",
  "files": [
    "dist"
  ],
  "main": "dist/cjs/index.d.cts",
  "module": "dist/esm/index.d.ts",
  "types": "dist/cjs/index.d.cts",
  "bin": {
    "ram": "dist/cli/cli.js"
  },
  "exports": {
    "./cli": {
      "import": "./dist/cli/cli.js"
    },
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/cjs/index.d.cts",
        "default": "./dist/cjs/index.cjs"
      }
    }
  },
  "scripts": {
    "typecheck": "tsc",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "build": "tsdown -c tsdown.config.ts",
    "build-binary": "oxnode build-binary.ts",
    "artifacts": "oxnode organize-artifacts.ts",
    "generate-packages": "oxnode generate-npm-packages.ts",
    "dev": "pnpm build && node dist/cli/cli.js"
  },
  "packageManager": "pnpm@10.10.0",
  "dependencies": {
    "execa": "^9.5.2"
  },
  "devDependencies": {
    "@oxc-node/cli": "^0.0.27",
    "@oxc-node/core": "^0.0.27",
    "glob": "^11.0.2",
    "tsdown": "^0.10.2"
  },
  "optionalDependencies": {
    "@ramlang/cli-darwin-x64": "workspace:0.1.0-alpha.7",
    "@ramlang/cli-darwin-arm64": "workspace:0.1.0-alpha.7",
    "@ramlang/cli-linux-x64-gnu": "workspace:0.1.0-alpha.7",
    "@ramlang/cli-linux-x64-musl": "workspace:0.1.0-alpha.7",
    "@ramlang/cli-linux-arm64-gnu": "workspace:0.1.0-alpha.7",
    "@ramlang/cli-linux-arm64-musl": "workspace:0.1.0-alpha.7",
    "@ramlang/cli-win32-x64": "workspace:0.1.0-alpha.7",
    "@ramlang/cli-win32-arm64": "workspace:0.1.0-alpha.7"
  }
}
